{# Static Page Template for Gadgets Zone Theme #}

{% extends "layouts.master" %}

{% block title %}{{ page.title }} - {{ store.name }}{% endblock %}

{% block description %}{{ page.description|default(page.content|striptags|slice(0, 160)) }}{% endblock %}

{% block body_class %}static-page page-{{ page.slug }}{% endblock %}

{% block content %}

{# Page Header #}
<section class="page-header">
    <div class="container">
        {# Breadcrumbs #}
        <nav class="breadcrumbs" aria-label="Breadcrumb">
            <ol class="breadcrumb-list">
                <li class="breadcrumb-item">
                    <a href="{{ store.url }}">{{ trans('common.home') }}</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    {{ page.title }}
                </li>
            </ol>
        </nav>
        
        {# Page Title #}
        <div class="page-header-content">
            <h1 class="page-title">{{ page.title }}</h1>
            {% if page.description %}
                <p class="page-description">{{ page.description }}</p>
            {% endif %}
        </div>
    </div>
</section>

{# Page Content #}
<section class="page-content-section">
    <div class="container">
        {% if page.slug == 'about-us' %}
            {# About Us Page Content #}
            <div class="about-us-content">
                <div class="about-hero">
                    <div class="about-hero-content">
                        <div class="about-text">
                            <h2>{{ trans('about.welcome_title') }}</h2>
                            <p class="lead">{{ trans('about.welcome_description') }}</p>
                            <div class="about-stats">
                                <div class="stat-item">
                                    <span class="stat-number">10+</span>
                                    <span class="stat-label">{{ trans('about.years_experience') }}</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-number">50K+</span>
                                    <span class="stat-label">{{ trans('about.happy_customers') }}</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-number">1000+</span>
                                    <span class="stat-label">{{ trans('about.products_sold') }}</span>
                                </div>
                            </div>
                        </div>
                        <div class="about-image">
                            <img src="{{ 'assets/images/about-hero.jpg'|asset }}" alt="{{ trans('about.about_us') }}" class="hero-image">
                        </div>
                    </div>
                </div>
                
                <div class="about-story">
                    <div class="story-content">
                        <h3>{{ trans('about.our_story') }}</h3>
                        <div class="story-text">
                            {{ page.content|default(trans('about.story_content'))|raw }}
                        </div>
                    </div>
                </div>
                
                <div class="about-values">
                    <h3>{{ trans('about.our_values') }}</h3>
                    <div class="values-grid">
                        <div class="value-item">
                            <div class="value-icon">
                                <i class="icon-award"></i>
                            </div>
                            <h4>{{ trans('about.quality') }}</h4>
                            <p>{{ trans('about.quality_description') }}</p>
                        </div>
                        <div class="value-item">
                            <div class="value-icon">
                                <i class="icon-users"></i>
                            </div>
                            <h4>{{ trans('about.customer_focus') }}</h4>
                            <p>{{ trans('about.customer_focus_description') }}</p>
                        </div>
                        <div class="value-item">
                            <div class="value-icon">
                                <i class="icon-zap"></i>
                            </div>
                            <h4>{{ trans('about.innovation') }}</h4>
                            <p>{{ trans('about.innovation_description') }}</p>
                        </div>
                        <div class="value-item">
                            <div class="value-icon">
                                <i class="icon-heart"></i>
                            </div>
                            <h4>{{ trans('about.passion') }}</h4>
                            <p>{{ trans('about.passion_description') }}</p>
                        </div>
                    </div>
                </div>
                
                <div class="about-team">
                    <h3>{{ trans('about.meet_team') }}</h3>
                    <div class="team-grid">
                        <div class="team-member">
                            <div class="member-image">
                                <img src="{{ 'assets/images/team-1.jpg'|asset }}" alt="John Smith">
                            </div>
                            <div class="member-info">
                                <h4>John Smith</h4>
                                <p class="member-role">{{ trans('about.ceo_founder') }}</p>
                                <div class="member-social">
                                    <a href="#" class="social-link"><i class="icon-linkedin"></i></a>
                                    <a href="#" class="social-link"><i class="icon-twitter"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="team-member">
                            <div class="member-image">
                                <img src="{{ 'assets/images/team-2.jpg'|asset }}" alt="Sarah Johnson">
                            </div>
                            <div class="member-info">
                                <h4>Sarah Johnson</h4>
                                <p class="member-role">{{ trans('about.head_marketing') }}</p>
                                <div class="member-social">
                                    <a href="#" class="social-link"><i class="icon-linkedin"></i></a>
                                    <a href="#" class="social-link"><i class="icon-instagram"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="team-member">
                            <div class="member-image">
                                <img src="{{ 'assets/images/team-3.jpg'|asset }}" alt="Mike Chen">
                            </div>
                            <div class="member-info">
                                <h4>Mike Chen</h4>
                                <p class="member-role">{{ trans('about.tech_director') }}</p>
                                <div class="member-social">
                                    <a href="#" class="social-link"><i class="icon-linkedin"></i></a>
                                    <a href="#" class="social-link"><i class="icon-github"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        {% elseif page.slug == 'contact' %}
            {# Contact Page Content #}
            <div class="contact-content">
                <div class="contact-layout">
                    <div class="contact-info">
                        <h2>{{ trans('contact.get_in_touch') }}</h2>
                        <p class="contact-description">{{ trans('contact.description') }}</p>
                        
                        <div class="contact-methods">
                            <div class="contact-method">
                                <div class="method-icon">
                                    <i class="icon-map-pin"></i>
                                </div>
                                <div class="method-content">
                                    <h4>{{ trans('contact.address') }}</h4>
                                    <p>{{ store.address|default('123 Tech Street, Digital City, DC 12345') }}</p>
                                </div>
                            </div>
                            
                            <div class="contact-method">
                                <div class="method-icon">
                                    <i class="icon-phone"></i>
                                </div>
                                <div class="method-content">
                                    <h4>{{ trans('contact.phone') }}</h4>
                                    <p>{{ store.phone|default('+1 (555) 123-4567') }}</p>
                                </div>
                            </div>
                            
                            <div class="contact-method">
                                <div class="method-icon">
                                    <i class="icon-mail"></i>
                                </div>
                                <div class="method-content">
                                    <h4>{{ trans('contact.email') }}</h4>
                                    <p>{{ store.email|default('info@gadgetszone.com') }}</p>
                                </div>
                            </div>
                            
                            <div class="contact-method">
                                <div class="method-icon">
                                    <i class="icon-clock"></i>
                                </div>
                                <div class="method-content">
                                    <h4>{{ trans('contact.business_hours') }}</h4>
                                    <p>{{ trans('contact.hours_weekdays') }}<br>
                                       {{ trans('contact.hours_weekend') }}</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="contact-social">
                            <h4>{{ trans('contact.follow_us') }}</h4>
                            <div class="social-links">
                                <a href="#" class="social-link facebook">
                                    <i class="icon-facebook"></i>
                                </a>
                                <a href="#" class="social-link twitter">
                                    <i class="icon-twitter"></i>
                                </a>
                                <a href="#" class="social-link instagram">
                                    <i class="icon-instagram"></i>
                                </a>
                                <a href="#" class="social-link youtube">
                                    <i class="icon-youtube"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="contact-form-container">
                        <h2>{{ trans('contact.send_message') }}</h2>
                        <form class="contact-form" action="{{ store.url }}/contact" method="POST">
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="first-name">{{ trans('contact.first_name') }} *</label>
                                    <input type="text" id="first-name" name="first_name" required>
                                </div>
                                <div class="form-group">
                                    <label for="last-name">{{ trans('contact.last_name') }} *</label>
                                    <input type="text" id="last-name" name="last_name" required>
                                </div>
                            </div>
                            
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="email">{{ trans('contact.email') }} *</label>
                                    <input type="email" id="email" name="email" required>
                                </div>
                                <div class="form-group">
                                    <label for="phone">{{ trans('contact.phone') }}</label>
                                    <input type="tel" id="phone" name="phone">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label for="subject">{{ trans('contact.subject') }} *</label>
                                <select id="subject" name="subject" required>
                                    <option value="">{{ trans('contact.select_subject') }}</option>
                                    <option value="general">{{ trans('contact.general_inquiry') }}</option>
                                    <option value="support">{{ trans('contact.technical_support') }}</option>
                                    <option value="order">{{ trans('contact.order_inquiry') }}</option>
                                    <option value="return">{{ trans('contact.return_exchange') }}</option>
                                    <option value="partnership">{{ trans('contact.partnership') }}</option>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label for="message">{{ trans('contact.message') }} *</label>
                                <textarea id="message" name="message" rows="6" required placeholder="{{ trans('contact.message_placeholder') }}"></textarea>
                            </div>
                            
                            <div class="form-group">
                                <label class="checkbox-label">
                                    <input type="checkbox" name="newsletter" value="1">
                                    <span class="checkmark"></span>
                                    {{ trans('contact.newsletter_signup') }}
                                </label>
                            </div>
                            
                            <button type="submit" class="btn btn-primary btn-large">
                                <i class="icon-send"></i>
                                {{ trans('contact.send_message') }}
                            </button>
                        </form>
                    </div>
                </div>
                
                {# Store Locations #}
                <div class="store-locations">
                    <h2>{{ trans('contact.store_locations') }}</h2>
                    <div class="locations-grid">
                        <div class="location-card">
                            <div class="location-image">
                                <img src="{{ 'assets/images/store-1.jpg'|asset }}" alt="{{ trans('contact.main_store') }}">
                            </div>
                            <div class="location-info">
                                <h4>{{ trans('contact.main_store') }}</h4>
                                <p class="location-address">123 Tech Street<br>Digital City, DC 12345</p>
                                <p class="location-hours">
                                    <strong>{{ trans('contact.hours') }}:</strong><br>
                                    {{ trans('contact.hours_weekdays') }}<br>
                                    {{ trans('contact.hours_weekend') }}
                                </p>
                                <p class="location-phone">
                                    <strong>{{ trans('contact.phone') }}:</strong> +1 (555) 123-4567
                                </p>
                            </div>
                        </div>
                        
                        <div class="location-card">
                            <div class="location-image">
                                <img src="{{ 'assets/images/store-2.jpg'|asset }}" alt="{{ trans('contact.branch_store') }}">
                            </div>
                            <div class="location-info">
                                <h4>{{ trans('contact.branch_store') }}</h4>
                                <p class="location-address">456 Innovation Ave<br>Tech Valley, TV 67890</p>
                                <p class="location-hours">
                                    <strong>{{ trans('contact.hours') }}:</strong><br>
                                    {{ trans('contact.hours_weekdays') }}<br>
                                    {{ trans('contact.hours_weekend') }}
                                </p>
                                <p class="location-phone">
                                    <strong>{{ trans('contact.phone') }}:</strong> +1 (555) 987-6543
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        {% else %}
            {# Generic Page Content (Privacy Policy, Terms, Returns, etc.) #}
            <div class="generic-page-content">
                <div class="page-content-wrapper">
                    {% if page.content %}
                        <div class="content-body">
                            {{ page.content|raw }}
                        </div>
                    {% else %}
                        {# Default content based on page slug #}
                        {% if page.slug == 'privacy-policy' %}
                            <div class="policy-content">
                                <div class="policy-section">
                                    <h2>{{ trans('privacy.information_collection') }}</h2>
                                    <p>{{ trans('privacy.collection_description') }}</p>
                                    <ul>
                                        <li>{{ trans('privacy.personal_info') }}</li>
                                        <li>{{ trans('privacy.payment_info') }}</li>
                                        <li>{{ trans('privacy.browsing_info') }}</li>
                                        <li>{{ trans('privacy.device_info') }}</li>
                                    </ul>
                                </div>
                                
                                <div class="policy-section">
                                    <h2>{{ trans('privacy.information_use') }}</h2>
                                    <p>{{ trans('privacy.use_description') }}</p>
                                    <ul>
                                        <li>{{ trans('privacy.process_orders') }}</li>
                                        <li>{{ trans('privacy.customer_service') }}</li>
                                        <li>{{ trans('privacy.marketing') }}</li>
                                        <li>{{ trans('privacy.improve_services') }}</li>
                                    </ul>
                                </div>
                                
                                <div class="policy-section">
                                    <h2>{{ trans('privacy.information_sharing') }}</h2>
                                    <p>{{ trans('privacy.sharing_description') }}</p>
                                </div>
                                
                                <div class="policy-section">
                                    <h2>{{ trans('privacy.data_security') }}</h2>
                                    <p>{{ trans('privacy.security_description') }}</p>
                                </div>
                                
                                <div class="policy-section">
                                    <h2>{{ trans('privacy.your_rights') }}</h2>
                                    <p>{{ trans('privacy.rights_description') }}</p>
                                </div>
                                
                                <div class="policy-section">
                                    <h2>{{ trans('privacy.contact_us') }}</h2>
                                    <p>{{ trans('privacy.contact_description') }}</p>
                                    <p><strong>{{ trans('contact.email') }}:</strong> privacy@gadgetszone.com</p>
                                </div>
                            </div>
                            
                        {% elseif page.slug == 'terms-conditions' %}
                            <div class="policy-content">
                                <div class="policy-section">
                                    <h2>{{ trans('terms.acceptance') }}</h2>
                                    <p>{{ trans('terms.acceptance_description') }}</p>
                                </div>
                                
                                <div class="policy-section">
                                    <h2>{{ trans('terms.use_of_site') }}</h2>
                                    <p>{{ trans('terms.use_description') }}</p>
                                    <ul>
                                        <li>{{ trans('terms.lawful_use') }}</li>
                                        <li>{{ trans('terms.accurate_info') }}</li>
                                        <li>{{ trans('terms.respect_rights') }}</li>
                                        <li>{{ trans('terms.no_harmful_content') }}</li>
                                    </ul>
                                </div>
                                
                                <div class="policy-section">
                                    <h2>{{ trans('terms.products_services') }}</h2>
                                    <p>{{ trans('terms.products_description') }}</p>
                                </div>
                                
                                <div class="policy-section">
                                    <h2>{{ trans('terms.pricing_payment') }}</h2>
                                    <p>{{ trans('terms.pricing_description') }}</p>
                                </div>
                                
                                <div class="policy-section">
                                    <h2>{{ trans('terms.shipping_delivery') }}</h2>
                                    <p>{{ trans('terms.shipping_description') }}</p>
                                </div>
                                
                                <div class="policy-section">
                                    <h2>{{ trans('terms.returns_refunds') }}</h2>
                                    <p>{{ trans('terms.returns_description') }}</p>
                                </div>
                                
                                <div class="policy-section">
                                    <h2>{{ trans('terms.limitation_liability') }}</h2>
                                    <p>{{ trans('terms.liability_description') }}</p>
                                </div>
                            </div>
                            
                        {% elseif page.slug == 'return-policy' %}
                            <div class="policy-content">
                                <div class="policy-section">
                                    <h2>{{ trans('returns.return_period') }}</h2>
                                    <p>{{ trans('returns.period_description') }}</p>
                                </div>
                                
                                <div class="policy-section">
                                    <h2>{{ trans('returns.return_conditions') }}</h2>
                                    <p>{{ trans('returns.conditions_description') }}</p>
                                    <ul>
                                        <li>{{ trans('returns.original_condition') }}</li>
                                        <li>{{ trans('returns.original_packaging') }}</li>
                                        <li>{{ trans('returns.proof_purchase') }}</li>
                                        <li>{{ trans('returns.no_damage') }}</li>
                                    </ul>
                                </div>
                                
                                <div class="policy-section">
                                    <h2>{{ trans('returns.return_process') }}</h2>
                                    <p>{{ trans('returns.process_description') }}</p>
                                    <ol>
                                        <li>{{ trans('returns.contact_support') }}</li>
                                        <li>{{ trans('returns.receive_authorization') }}</li>
                                        <li>{{ trans('returns.package_item') }}</li>
                                        <li>{{ trans('returns.ship_item') }}</li>
                                        <li>{{ trans('returns.receive_refund') }}</li>
                                    </ol>
                                </div>
                                
                                <div class="policy-section">
                                    <h2>{{ trans('returns.refund_policy') }}</h2>
                                    <p>{{ trans('returns.refund_description') }}</p>
                                </div>
                                
                                <div class="policy-section">
                                    <h2>{{ trans('returns.exchanges') }}</h2>
                                    <p>{{ trans('returns.exchange_description') }}</p>
                                </div>
                                
                                <div class="policy-section">
                                    <h2>{{ trans('returns.contact_info') }}</h2>
                                    <p>{{ trans('returns.contact_description') }}</p>
                                    <p><strong>{{ trans('contact.email') }}:</strong> returns@gadgetszone.com</p>
                                    <p><strong>{{ trans('contact.phone') }}:</strong> +1 (555) 123-4567</p>
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                    
                    {# Last Updated #}
                    <div class="page-meta">
                        <p class="last-updated">
                            {{ trans('common.last_updated') }}: 
                            {{ page.updated_at|default('now')|date('F j, Y') }}
                        </p>
                    </div>
                </div>
                
                {# Page Navigation #}
                <div class="page-navigation">
                    <h3>{{ trans('common.related_pages') }}</h3>
                    <div class="related-pages">
                        <a href="/about-us" class="related-page-link">
                            <i class="icon-info"></i>
                            {{ trans('common.about_us') }}
                        </a>
                        <a href="/contact" class="related-page-link">
                            <i class="icon-mail"></i>
                            {{ trans('common.contact') }}
                        </a>
                        <a href="/privacy-policy" class="related-page-link">
                            <i class="icon-shield"></i>
                            {{ trans('common.privacy_policy') }}
                        </a>
                        <a href="/terms-conditions" class="related-page-link">
                            <i class="icon-file-text"></i>
                            {{ trans('common.terms_conditions') }}
                        </a>
                        <a href="/return-policy" class="related-page-link">
                            <i class="icon-refresh-cw"></i>
                            {{ trans('common.return_policy') }}
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</section>

{% endblock %}

{% block styles %}
<link rel="stylesheet" href="{{ 'assets/styles/components.css'|asset }}">
<style>
/* Static Page Styles */

.page-header {
    background: var(--background-light);
    padding: 2rem 0;
    border-bottom: 1px solid var(--border-color);
}

.page-title {
    font-size: 2.5rem;
    font-weight: var(--font-weight-bold);
    margin-bottom: 0.5rem;
    color: var(--text-color);
}

.page-description {
    font-size: 1.125rem;
    color: var(--text-light);
    margin-bottom: 1rem;
    line-height: 1.6;
}

.page-content-section {
    padding: 4rem 0;
}

/* About Us Page Styles */
.about-hero {
    margin-bottom: 4rem;
}

.about-hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
}

.about-text h2 {
    font-size: 2rem;
    font-weight: var(--font-weight-bold);
    margin-bottom: 1.5rem;
    color: var(--text-color);
}

.lead {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--text-light);
    margin-bottom: 2rem;
}

.about-stats {
    display: flex;
    gap: 2rem;
}

.stat-item {
    text-align: center;
}

.stat-number {
    display: block;
    font-size: 2rem;
    font-weight: var(--font-weight-bold);
    color: var(--primary-color);
}

.stat-label {
    font-size: 0.875rem;
    color: var(--text-light);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.hero-image {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: var(--border-radius);
}

.about-story {
    margin-bottom: 4rem;
    padding: 3rem;
    background: var(--background-light);
    border-radius: var(--border-radius);
}

.about-story h3 {
    font-size: 1.75rem;
    font-weight: var(--font-weight-bold);
    margin-bottom: 1.5rem;
    color: var(--text-color);
    text-align: center;
}

.story-text {
    line-height: 1.8;
    color: var(--text-color);
    max-width: 800px;
    margin: 0 auto;
}

.about-values {
    margin-bottom: 4rem;
}

.about-values h3 {
    font-size: 1.75rem;
    font-weight: var(--font-weight-bold);
    margin-bottom: 2rem;
    color: var(--text-color);
    text-align: center;
}

.values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
}

.value-item {
    text-align: center;
    padding: 2rem;
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-light);
    transition: var(--transition);
}

.value-item:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-heavy);
}

.value-icon {
    width: 80px;
    height: 80px;
    background: var(--primary-color);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: white;
    font-size: 2rem;
}

.value-item h4 {
    font-size: 1.25rem;
    font-weight: var(--font-weight-semibold);
    margin-bottom: 1rem;
    color: var(--text-color);
}

.value-item p {
    color: var(--text-light);
    line-height: 1.6;
}

.about-team h3 {
    font-size: 1.75rem;
    font-weight: var(--font-weight-bold);
    margin-bottom: 2rem;
    color: var(--text-color);
    text-align: center;
}

.team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
}

.team-member {
    text-align: center;
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-light);
    overflow: hidden;
    transition: var(--transition);
}

.team-member:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-heavy);
}

.member-image {
    width: 100%;
    height: 250px;
    overflow: hidden;
}

.member-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

